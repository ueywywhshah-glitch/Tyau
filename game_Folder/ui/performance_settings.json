{
  "namespace": "performance_settings",

  "performance_settings_screen@common.base_screen": {
    "$screen_bg_content": "RPC_BGDATA.UI2",
    "$screen_animations": [
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade"
    ],
    "$screen_content": "performance_settings.performance_screen_content"
  },

  "performance_screen_content": {
    "type": "panel",
    "controls": [
      { "back_button_panel@performance_settings.back_button_section": {} },
      { "main_content@performance_settings.main_performance_panel": { "layer": 2 } }
    ]
  },

  "back_button_section": {
    "type": "panel",
    "size": [ "100%", 35 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 10 ],
    "controls": [
      {
        "back_btn@common_buttons.simple_button": {
          "size": [ 100, 30 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 10, 0 ],
          "$button_text": "Back",
          "$button_size": [ 100, 30 ],
          "$pressed_button_name": "button.performance_back"
        }
      }
    ]
  },

  "main_performance_panel": {
    "type": "panel",
    "size": [ "100%", "100% - 50px" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 45 ],
    "controls": [
      {
        "title_panel": {
          "type": "panel",
          "size": [ "100%", 30 ],
          "controls": [
            {
              "title_bg": {
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "alpha": 0.15,
                "layer": 1
              }
            },
            {
              "title_border": {
                "type": "image",
                "texture": "textures/gui/client/btn_border",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "layer": 2
              }
            },
            {
              "title_text": {
                "type": "label",
                "text": "WOLF CLIENT | PERFORMANCE",
                "color": "$color_cyan",
                "offset": [ 15, 0 ],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "layer": 3
              }
            }
          ]
        }
      },
      { "title_gap": { "type": "panel", "size": [ "100%", 8 ] } },
      {
        "content_container": {
          "type": "stack_panel",
          "size": [ "95%c", "100%c" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 0 ],
          "controls": [
            {
              "graphics_header@performance_settings.section_header": {
                "$section_title": "GRAPHICS SETTINGS"
              }
            },
            { "gfx_gap1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "render_distance@performance_settings.slider_item": {
                "$item_label": "Render Distance",
                "$slider_binding": "#render_distance"
              }
            },
            { "gfx_gap2": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "fov@performance_settings.slider_item": {
                "$item_label": "Field of View (FOV)",
                "$slider_binding": "#fov"
              }
            },
            { "gfx_gap3": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "brightness@performance_settings.slider_item": {
                "$item_label": "Brightness",
                "$slider_binding": "#brightness"
              }
            },
            { "gfx_gap4": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "contrast@performance_settings.slider_item": {
                "$item_label": "Contrast",
                "$slider_binding": "#contrast"
              }
            },
            { "gfx_spacer": { "type": "panel", "size": [ "100%", 12 ] } },
            {
              "rendering_header@performance_settings.section_header": {
                "$section_title": "RENDERING OPTIONS"
              }
            },
            { "ren_gap1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "graphics_quality@performance_settings.toggle_item": {
                "$item_label": "Fancy Graphics",
                "$toggle_binding": "#fancy_graphics"
              }
            },
            { "ren_gap2": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "smooth_lighting@performance_settings.toggle_item": {
                "$item_label": "Smooth Lighting",
                "$toggle_binding": "#smooth_lighting"
              }
            },
            { "ren_gap3": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "vsync@performance_settings.toggle_item": {
                "$item_label": "VSync",
                "$toggle_binding": "#vsync_enabled"
              }
            },
            { "ren_gap4": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "entity_shadows@performance_settings.toggle_item": {
                "$item_label": "Entity Shadows",
                "$toggle_binding": "#entity_shadows"
              }
            },
            { "ren_spacer": { "type": "panel", "size": [ "100%", 12 ] } },
            {
              "particle_header@performance_settings.section_header": {
                "$section_title": "PARTICLE & EFFECTS"
              }
            },
            { "par_gap1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "particles@performance_settings.slider_item": {
                "$item_label": "Particle Density",
                "$slider_binding": "#particle_density"
              }
            },
            { "par_gap2": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "particle_effects@performance_settings.toggle_item": {
                "$item_label": "Particle Effects",
                "$toggle_binding": "#particle_effects"
              }
            },
            { "par_gap3": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "weather@performance_settings.toggle_item": {
                "$item_label": "Weather Effects",
                "$toggle_binding": "#weather_effects"
              }
            },
            { "par_spacer": { "type": "panel", "size": [ "100%", 12 ] } },
            {
              "advanced_header@performance_settings.section_header": {
                "$section_title": "ADVANCED SETTINGS"
              }
            },
            { "adv_gap1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "chunk_loading@performance_settings.slider_item": {
                "$item_label": "Chunk Loading Speed",
                "$slider_binding": "#chunk_load_speed"
              }
            },
            { "adv_gap2": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "ao@performance_settings.toggle_item": {
                "$item_label": "Ambient Occlusion",
                "$toggle_binding": "#ambient_occlusion"
              }
            },
            { "adv_gap3": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "mipmaps@performance_settings.toggle_item": {
                "$item_label": "Mipmaps",
                "$toggle_binding": "#mipmaps_enabled"
              }
            },
            { "adv_gap4": { "type": "panel", "size": [ "100%", 3 ] } },
            {
              "fps_counter@performance_settings.toggle_item": {
                "$item_label": "Show FPS Counter",
                "$toggle_binding": "#fps_counter_visible"
              }
            }
          ]
        }
      }
    ]
  },

  "section_header": {
    "type": "panel",
    "size": [ "100%", 22 ],
    "controls": [
      {
        "header_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$button_alpha_default",
          "layer": 1
        }
      },
      {
        "header_accent": {
          "type": "image",
          "texture": "textures/gui/client/btn_pressed",
          "nineslice_size": 4.0,
          "size": [ 4, "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 2
        }
      },
      {
        "header_text": {
          "type": "label",
          "text": "$section_title",
          "color": [ 0.7, 1, 1 ],
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 3
        }
      }
    ]
  },

  "slider_item": {
    "type": "panel",
    "size": [ "100%", 32 ],
    "controls": [
      {
        "item_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$bg_alpha_subtle",
          "layer": 1
        }
      },
      {
        "item_label": {
          "type": "label",
          "text": "$item_label",
          "color": [ 1, 1, 1 ],
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 2,
          "size": [ 150, "100%" ]
        }
      },
      {
        "slider@common_buttons.premium_slider": {
          "size": [ 140, 14 ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -12, 0 ],
          "layer": 6
        }
      }
    ]
  },

  "toggle_item": {
    "type": "panel",
    "size": [ "100%", 32 ],
    "controls": [
      {
        "item_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$bg_alpha_subtle",
          "layer": 1
        }
      },
      {
        "item_label": {
          "type": "label",
          "text": "$item_label",
          "color": [ 1, 1, 1 ],
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 2,
          "size": [ 150, "100%" ]
        }
      },
      {
        "toggle@common_buttons.premium_toggle": {
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -12, 0 ],
          "layer": 6
        }
      }
    ]
  }
}
