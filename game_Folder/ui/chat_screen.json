{
  "namespace": "chat",

  "down_arrow_image": { "type": "image", "size": [ 7, 8 ], "texture": "textures/ui/chat_down_arrow" },
  "keyboard_image": { "type": "image", "size": [ 9, 7 ], "texture": "textures/ui/chat_keyboard" },
  "gear_image": { "type": "image", "size": [ 14, 14 ], "texture": "textures/ui/gear" },
  "previous_message_image": { "type": "image", "size": [ 5, 14 ], "texture": "textures/ui/advanchat/previous_message" },
  "next_message_image": { "type": "image", "size": [ 5, 14 ], "texture": "textures/ui/advanchat/next_message" },
  "autocomplete_back_image": { "type": "image", "size": [ 10, 14 ], "texture": "textures/ui/advanchat/autocomplete_back" },
  "autocomplete_image": { "type": "image", "size": [ 10, 14 ], "texture": "textures/ui/advanchat/autocomplete" },
  "send_image": { "type": "image", "size": [ 21, 18 ], "texture": "textures/ui/chat_send" },

  "send_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%c", 17 ],
    "controls": [
      { "send_image_panel": { "type": "panel", "size": [ 21, 18 ], "controls": [ { "send_image@chat.send_image": {} } ] } }
    ]
  },

  "keyboard_image_panel": {
    "type": "panel",
    "controls": [
      { "keyboard_image@chat.keyboard_image": { "bindings": [ { "binding_name": "(not #keyboard_being_used)", "binding_name_override": "#visible" } ] } },
      { "down_arrow_image@chat.down_arrow_image": { "bindings": [ { "binding_name": "#keyboard_being_used", "binding_name_override": "#visible" } ] } }
    ]
  },

  /* KEYBOARD TOGGLE BUTTON */
  "keyboard_button@common_buttons.light_text_button": {
    "size": [ 27, 27 ],
    "$button_text": "",
    "$button_content": "chat.keyboard_image_panel",
    "$pressed_button_name": "button.keyboard_toggle",
    "$focus_id": "keyboard_button_focus_id",
    "bindings": [
      { "binding_name": "#keyboard_button_focus_override_up", "binding_name_override": "#focus_change_up" },
      { "binding_name": "#keyboard_button_focus_override_down", "binding_name_override": "#focus_change_down" },
      { "binding_name": "#keyboard_button_visible", "binding_name_override": "#visible" }
    ]
  },

  /* GLYPH BUTTONS (Settings, Arrows, Autocomplete) */
  "chat_settings_button@common_buttons.light_text_button": { 
    "size": [ 27, 27 ], 
    "$button_text": "", 
    "$button_content": "chat.gear_image", 
    "$pressed_button_name": "button.open_chat_settings", 
    "$focus_id": "chat_settings_button_focus_id" 
  },

  "chat_previous_message@common_buttons.light_text_button": { "size": [ 27, 27 ], "$button_text": "", "$button_content": "chat.previous_message_image", "$pressed_button_name": "button.chat_previous_message" },
  "chat_next_message@common_buttons.light_text_button": { "size": [ 27, 27 ], "$button_text": "", "$button_content": "chat.next_message_image", "$pressed_button_name": "button.chat_next_message" },
  "chat_autocomplete_back@common_buttons.light_text_button": { "size": [ 27, 27 ], "$button_text": "", "$button_content": "chat.autocomplete_back_image", "$pressed_button_name": "button.chat_autocomplete_back" },
  "chat_autocomplete@common_buttons.light_text_button": { "size": [ 27, 27 ], "$button_text": "", "$button_content": "chat.autocomplete_image", "$pressed_button_name": "button.chat_autocomplete" },

  /* SEND BUTTON */
  "send_button@common_buttons.light_text_button": {
    "size": [ "200%c", 27 ],
    "$button_text": "Send",
    "$pressed_button_name": "button.send",
    "bindings": [
      { "binding_name": "#send_button_visible", "binding_name_override": "#enabled" }
    ]
  },

  "messages_text": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "controls": [
      {
        "text": {
          "type": "label",
          "color": [ 1, 1, 1 ],
          "localize": false,
          "size": [ "100%", "default" ],
          "text": "#text",
          "bindings": [ { "binding_name": "#text" } ]
        }
      }
    ],
    "bindings": [ { "binding_name": "#chat_visible", "binding_name_override": "#visible" } ]
  },

  "message_tts_wrapper@common.tts_label_focus_wrapper": { "$tts_label_panel": "chat.messages_text", "$focus_border_visible_binding": "#host_options_menu_not_open_and_tts_enabled" },
  
  "messages_stack_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "factory": { "name": "messages_factory", "max_children_size": 100, "control_ids": { "chat_screen_messages": "chat_screen_messages@chat.message_tts_wrapper" } }
  },

  "messages_scrolling_panel@common.scrolling_panel": {
    "size": [ "100%-2px", "100%-50px" ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [ 2, -27 ],
    "$scrolling_content": "chat.messages_stack_panel",
    "$show_background": false,
    "$always_handle_scrolling": true
  },

  "text_edit_box@common.text_edit_box": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "fill", 27 ],
    "max_length": 512,
    "always_listening": true,
    "$text_box_name": "#message_text_box",
    "$text_edit_box_content_binding_name": "#message_text_box_content",
    "bindings": [
      { "binding_name": "#text_edit_box_focus_override_up", "binding_name_override": "#focus_change_up" },
      { "binding_name": "#text_edit_box_focus_override_down", "binding_name_override": "#focus_change_down" }
    ]
  },

  "chat_bottom_panel": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "size": [ "100%", 27 ],
    "controls": [
      { "keyboard_button@chat.keyboard_button": {} },
      { "chat_settings@chat.chat_settings_button": {} },
      { "chat_previous_message@chat.chat_previous_message": {} },
      { "chat_next_message@chat.chat_next_message": {} },
      { "chat_autocomplete_back@chat.chat_autocomplete_back": {} },
      { "chat_autocomplete@chat.chat_autocomplete": {} },
      { "text_box@chat.text_edit_box": { "size": [ "fill", 27 ] } },
      { "send_button@chat.send_button": {} }
    ]
  },

  "chat_header": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", 19 ],
    "controls": [
      {
        "header_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default", // Your custom texture
          "size": [ "100%", "100%" ],
          "alpha": 0.4,
          "layer": 1
        }
      },
      {
        "header_border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border", // Your cyan border
          "size": [ "100%", "100%" ],
          "layer": 3
        }
      },
      { 
        "title": { 
          "type": "label", 
          "text": "WOLF CLIENT | CHAT", 
          "color": [ 0, 1, 1 ], // Cyan text
          "offset": [ 5, 0 ], 
          "anchor_from": "left_middle", 
          "anchor_to": "left_middle",
          "layer": 4
        } 
      }
    ]
  },

  "chat_screen@common.base_screen": {
    "$screen_content": "chat.chat_screen_content",
    "$screen_bg_content": "chat.chat_background"
  },

  "chat_screen_content": {
    "type": "panel",
    "controls": [
      { "messages_panel@chat.messages_scrolling_panel": { "layer": 1 } },
      { "chat_bottom_panel@chat.chat_bottom_panel": { "layer": 5 } }, // Lifted buttons
      { "chat_top_panel@chat.chat_header": { "layer": 5 } }  // Fixed header
    ]
  },
  
  "chat_background": { 
    "type": "image", 
    "size": [ "100%", "100%" ], 
    "texture": "textures/ui/White", 
    "color": [ 0.0, 0.0, 0.0 ], 
    "alpha": 0.5 
  }
}