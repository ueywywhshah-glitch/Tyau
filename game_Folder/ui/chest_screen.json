{
  "namespace": "chest",

  "$container_width": "85%c",
  "$container_height": "80%c",
  "$slot_size": 32,
  "$slot_spacing": 2,

  "chest_screen@common.base_screen": {
    "$screen_bg_content": "chest.screen_background_wrapper",
    "$screen_content": "chest.screen_content"
  },

  "screen_background_wrapper@wolf_bg.custom_bg_panel": {
    "propagate_alpha": true,
    "alpha": 0.75,
    "layer": 1
  },

  "container_header": {
    "type": "panel",
    "size": [ "100%", 45 ],
    "anchor_from": "top_center",
    "anchor_to": "top_center",
    "layer": 40,
    "controls": [
      {
        "header_background": {
          "type": "image",
          "texture": "$button_texture_default",
          "nineslice_size": "$button_nineslice",
          "size": [ "100%", "100%" ],
          "color": "$color_cyan",
          "alpha": 0.7,
          "layer": 40
        }
      },
      {
        "header_accent": {
          "type": "image",
          "texture": "$button_texture_border",
          "nineslice_size": "$button_nineslice",
          "size": [ "100%", "100%" ],
          "color": "$color_cyan_secondary",
          "alpha": 0.5,
          "layer": 41
        }
      },
      {
        "header_title": {
          "type": "label",
          "text": "CHEST",
          "color": "$color_white",
          "size": [ "100%", "100%" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "font_size": "large",
          "shadow": true,
          "layer": 42
        }
      }
    ]
  },

  "container_panel": {
    "type": "panel",
    "size": [ "$container_width", "$container_height" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 38,
    "controls": [
      {
        "panel_border": {
          "type": "image",
          "texture": "$button_texture_border",
          "nineslice_size": "$button_nineslice",
          "size": [ "100%", "100%" ],
          "color": "$color_cyan",
          "alpha": 0.6,
          "layer": 40
        }
      },
      {
        "panel_background": {
          "type": "image",
          "texture": "$button_texture_default",
          "nineslice_size": "$button_nineslice",
          "size": [ "100%", "100%" ],
          "color": [ 0.05, 0.05, 0.1 ],
          "alpha": 0.7,
          "layer": 39
        }
      },
      {
        "container_grid": {
          "type": "grid",
          "size": [ "calc(100% - 20px)", "calc(100% - 20px)" ],
          "anchor_from": "center",
          "anchor_to": "center",
          "layer": 42,
          "controls": [
            {
              "slot@chest.chest_slot": {
                "size": [ "$slot_size", "$slot_size" ]
              }
            }
          ]
        }
      }
    ]
  },

  "chest_slot": {
    "type": "panel",
    "layer": 42,
    "controls": [
      {
        "slot_border": {
          "type": "image",
          "texture": "$button_texture_border",
          "nineslice_size": "$button_nineslice",
          "size": [ "100%", "100%" ],
          "color": "$color_cyan",
          "alpha": 0.4,
          "layer": 42
        }
      },
      {
        "slot_hover": {
          "type": "image",
          "texture": "$button_texture_hover",
          "nineslice_size": "$button_nineslice",
          "size": [ "100%", "100%" ],
          "color": "$color_cyan",
          "alpha": 0.5,
          "layer": 43,
          "bindings": [
            {
              "binding_name": "#is_slot_hovered",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  "screen_content": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "header@chest.container_header": {
          "layer": 40
        }
      },
      {
        "container@chest.container_panel": {
          "layer": 38
        }
      }
    ]
  }
}
