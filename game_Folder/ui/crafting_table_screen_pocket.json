{
  "namespace": "crafting_pocket",

  "crafting_table_pocket_screen@common.base_screen": {
    "$screen_bg_content": "RPC_BGDATA.UI2",
    "$screen_animations": [
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade"
    ],
    "$screen_content": "crafting_pocket.pocket_screen_content"
  },

  "pocket_screen_content": {
    "type": "panel",
    "size": [ "$safezone_width", "$safezone_height" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "header@crafting_pocket.pocket_header": { "layer": 5 } },
      { "main_content@crafting_pocket.main_pocket_panel": { "layer": 6 } },
      { "toolbar@crafting_pocket.pocket_toolbar": { "layer": 5 } }
    ]
  },

  "pocket_header": {
    "type": "panel",
    "size": [ "100%", "$header_height" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 0 ],
    "layer": 7,
    "controls": [
      {
        "header_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$panel_bg_alpha",
          "layer": 40
        }
      },
      {
        "header_border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "layer": 41
        }
      },
      {
        "header_text": {
          "type": "label",
          "text": "WOLF CLIENT | CRAFTING (POCKET)",
          "color": "$color_cyan",
          "offset": [ 15, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 42
        }
      }
    ]
  },

  "main_pocket_panel": {
    "type": "panel",
    "size": [ "100%", "100% - 90px" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 35 ],
    "layer": 6,
    "controls": [
      {
        "crafting_container": {
          "type": "stack_panel",
          "orientation": "vertical",
          "size": [ "95%c", "100%c" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 10 ],
          "layer": 6,
          "controls": [
            {
              "input_section": {
                "type": "panel",
                "size": [ "100%", 80 ],
                "layer": 6,
                "controls": [
                  {
                    "input_label": {
                      "type": "label",
                      "text": "Input Slots",
                      "color": "$color_cyan_secondary",
                      "offset": [ 10, 5 ],
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "layer": 42
                    }
                  },
                  {
                    "input_grid": {
                      "type": "panel",
                      "size": [ "100%", 60 ],
                      "anchor_from": "bottom_middle",
                      "anchor_to": "bottom_middle",
                      "offset": [ 0, -5 ],
                      "layer": 6,
                      "controls": [
                        {
                          "grid_bg": {
                            "type": "image",
                            "texture": "textures/gui/client/btn_default",
                            "nineslice_size": 4.0,
                            "size": [ "100%", "100%" ],
                            "alpha": "$bg_alpha_subtle",
                            "layer": 50
                          }
                        },
                        {
                          "grid_border": {
                            "type": "image",
                            "texture": "textures/gui/client/btn_border",
                            "nineslice_size": 4.0,
                            "size": [ "100%", "100%" ],
                            "layer": 51
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            { "spacing_1": { "type": "panel", "size": [ "100%", "$spacing_large" ], "layer": 1 } },
            {
              "arrow_section": {
                "type": "panel",
                "size": [ "100%", 60 ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "offset": [ 0, 0 ],
                "layer": 6,
                "controls": [
                  {
                    "crafting_arrow_down@crafting_pocket.crafting_arrow_down": {
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "layer": 11
                    }
                  }
                ]
              }
            },
            { "spacing_2": { "type": "panel", "size": [ "100%", "$spacing_large" ], "layer": 1 } },
            {
              "output_section": {
                "type": "panel",
                "size": [ "100%", 80 ],
                "layer": 6,
                "controls": [
                  {
                    "output_label": {
                      "type": "label",
                      "text": "Output Slot",
                      "color": "$color_cyan_secondary",
                      "offset": [ 10, 5 ],
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "layer": 42
                    }
                  },
                  {
                    "output_slot": {
                      "type": "panel",
                      "size": [ 80, 60 ],
                      "anchor_from": "center",
                      "anchor_to": "center",
                      "offset": [ 0, 5 ],
                      "layer": 6,
                      "controls": [
                        {
                          "slot_bg": {
                            "type": "image",
                            "texture": "textures/gui/client/btn_default",
                            "nineslice_size": 4.0,
                            "size": [ "100%", "100%" ],
                            "alpha": "$bg_alpha_subtle",
                            "layer": 50
                          }
                        },
                        {
                          "slot_border": {
                            "type": "image",
                            "texture": "textures/gui/client/btn_border",
                            "nineslice_size": 4.0,
                            "size": [ "100%", "100%" ],
                            "layer": 51
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "crafting_arrow_down": {
    "type": "panel",
    "size": [ 60, 60 ],
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 11,
    "controls": [
      {
        "arrow_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$panel_bg_alpha",
          "layer": 50
        }
      },
      {
        "arrow_border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "layer": 51
        }
      },
      {
        "arrow_icon": {
          "type": "image",
          "texture": "textures/gui/client/btn_pressed",
          "size": [ 32, 32 ],
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "$color_cyan",
          "layer": 52
        }
      },
      {
        "quick_craft_button@common_buttons.icon_button": {
          "size": [ 40, 40 ],
          "offset": [ 10, 0 ],
          "$button_size": [ 40, 40 ],
          "$button_text": "",
          "$pressed_button_name": "button.quick_craft_pocket",
          "$focus_id": "quick_craft_pocket",
          "layer": 11
        }
      }
    ]
  },

  "pocket_toolbar": {
    "type": "panel",
    "size": [ "100%", 50 ],
    "anchor_from": "bottom_left",
    "anchor_to": "bottom_left",
    "offset": [ 0, 0 ],
    "layer": 5,
    "controls": [
      {
        "toolbar_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$panel_bg_alpha",
          "layer": 40
        }
      },
      {
        "toolbar_border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "layer": 41
        }
      },
      {
        "toolbar_stack": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": [ "100%", "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "offset": [ 10, 0 ],
          "layer": 42,
          "controls": [
            {
              "back_button@common_buttons.simple_button": {
                "size": [ 100, 30 ],
                "$button_text": "Back",
                "$button_size": [ 100, 30 ],
                "$pressed_button_name": "button.crafting_pocket_back",
                "$focus_id": "crafting_pocket_back",
                "layer": 10
              }
            },
            { "spacing": { "type": "panel", "size": [ "$spacing_large", "100%" ], "layer": 1 } },
            {
              "clear_button@common_buttons.simple_button": {
                "size": [ 100, 30 ],
                "$button_text": "Clear",
                "$button_size": [ 100, 30 ],
                "$pressed_button_name": "button.crafting_pocket_clear",
                "$focus_id": "crafting_pocket_clear",
                "layer": 10
              }
            }
          ]
        }
      }
    ]
  }
}
