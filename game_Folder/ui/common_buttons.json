{
  "namespace": "common_buttons",

  // 1. Image Shortcut
  "client_button_panel": {
    "type": "image",
    "texture": "textures/gui/client/btn_default",
    "nineslice_size": 4.0,
    "size": [ "100%", "100%" ]
  },

  // 2. Global Wrapper
  "light_text_button@common.button": {
    "size": [ "100%", "100%" ],
    "controls": [
      { "bg@common_buttons.simple_button": {} }
    ]
  },

  // 3. Main Button Logic
  "simple_button@common.button": {
    "size": [ "100%", "100%" ],
    "controls": [
      {
        "default": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "alpha": 0.25,
          "layer": 1,
          "bindings": [
            {
              "binding_name": "(not #is_button_hovered and not #is_button_pressed)",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "hover": {
          "type": "image",
          "texture": "textures/gui/client/btn_hover",
          "nineslice_size": 4.0,
          "alpha": 0.65,
          "layer": 2,
          "bindings": [
            {
              "binding_name": "#is_button_hovered",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "pressed": {
          "type": "image",
          "texture": "textures/gui/client/btn_pressed",
          "nineslice_size": 4.0,
          "alpha": 1.0,
          "layer": 3,
          "bindings": [
            {
              "binding_name": "#is_button_pressed",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": 4.0,
          "layer": 5,
          "alpha": 1.0
        }
      },
      {
        "text_label": {
          "type": "label",
          "text": "$button_text",
          "shadow": true,
          "layer": 6,
          "color": [ 1, 1, 1 ],
          "anchor_from": "center",
          "anchor_to": "center"
        }
      }
    ]
  },

  // 4. Premium Settings: Toggle (Switch Style)
  "premium_toggle": {
    "type": "panel",
    "size": [ 24, 12 ],
    "controls": [
      { "bg": { "type": "image", "texture": "textures/gui/client/btn_default", "alpha": 0.4, "layer": 1 } },
      { 
        "on_glow": { 
          "type": "image", 
          "texture": "textures/gui/client/btn_pressed", 
          "size": [ "50%", "100%" ], 
          "anchor_from": "right_middle", 
          "anchor_to": "right_middle",
          "bindings": [ { "binding_name": "#toggle_state", "binding_name_override": "#visible" } ],
          "layer": 2 
        } 
      },
      { "border": { "type": "image", "texture": "textures/gui/client/btn_border", "layer": 3 } }
    ]
  },

  // 5. Premium Settings: Slider
  "premium_slider": {
    "type": "panel",
    "size": [ "100%", 12 ],
    "controls": [
      { "track": { "type": "image", "texture": "textures/gui/client/btn_default", "alpha": 0.5, "size": [ "100%", 4 ], "layer": 1 } },
      { "knob": { "type": "image", "texture": "textures/gui/client/btn_border", "size": [ 12, 12 ], "layer": 2 } }
    ]
  }
}