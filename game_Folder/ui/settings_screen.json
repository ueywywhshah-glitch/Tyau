{
  "namespace": "settings_start",

  "settings_screen@common.base_screen": {
    "$screen_bg_content": "RPC_BGDATA.UI2",
    "$screen_animations": [
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade"
    ],
    "$screen_content": "settings_start.settings_screen_content"
  },

  "settings_screen_content": {
    "type": "panel",
    "controls": [
      { "sidebar@settings_start.category_stack": {} },
      { "options_view@settings_start.options_panel": {} }
    ]
  },

  "category_stack": {
    "type": "stack_panel",
    "size": [ 120, "100%" ],
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "offset": [ 20, 0 ],
    "controls": [
      { "fill": { "type": "panel", "size": [ "100%", "fill" ] } },
      { "video@settings_start.cat_row": { "$button_text": "Video", "$pressed_button_name": "button.video_tab" } },
      { "p1": { "type": "panel", "size": [ "100%", 2 ] } },
      { "audio@settings_start.cat_row": { "$button_text": "Audio", "$pressed_button_name": "button.audio_tab" } },
      { "p2": { "type": "panel", "size": [ "100%", 2 ] } },
      { "performance@settings_start.cat_row": { "$button_text": "Performance", "$pressed_button_name": "button.performance_tab" } },
      { "p3": { "type": "panel", "size": [ "100%", 2 ] } },
      { "ctrl@settings_start.cat_row": { "$button_text": "Controls", "$pressed_button_name": "button.controls_tab" } },
      { "fill2": { "type": "panel", "size": [ "100%", "fill" ] } }
    ]
  },

  "cat_row": {
    "type": "panel",
    "size": [ "100%", 30 ],
    "controls": [
      { "b@common_buttons.simple_button": { "size": [ "100%", "100%" ] } }
    ]
  },

  "video_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 140px", "100% - 40px" ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [ -10, 0 ],
    "controls": [
      { "fov_slider@settings_start.slider_row": { "$option_label": "options.fov", "$slider_binding": "#fov" } },
      { "gap1": { "type": "panel", "size": [ "100%", 4 ] } },
      { "render_dist@settings_start.slider_row": { "$option_label": "options.renderdistance", "$slider_binding": "#render_distance" } },
      { "gap2": { "type": "panel", "size": [ "100%", 10 ] } },
      { "fancy_toggle@settings_start.toggle_row": { "$option_label": "options.fancygraphics", "$toggle_binding": "#fancy_graphics" } }
    ]
  },

  "audio_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 140px", "100% - 40px" ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [ -10, 0 ],
    "controls": [
      {
        "header_section": {
          "type": "panel",
          "size": [ "100%", 25 ],
          "controls": [
            {
              "header_bg": {
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "alpha": 0.15,
                "layer": 1
              }
            },
            {
              "header_border": {
                "type": "image",
                "texture": "textures/gui/client/btn_border",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "layer": 2
              }
            },
            {
              "header_text": {
                "type": "label",
                "text": "Audio Settings",
                "color": "$color_cyan",
                "offset": [ 10, 0 ],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "layer": 3
              }
            }
          ]
        }
      },
      { "gap_header": { "type": "panel", "size": [ "100%", 6 ] } },
      {
        "volume_section": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "master_volume@settings_start.slider_row": {
                "$option_label": "Master Volume",
                "$slider_binding": "#master_volume"
              }
            },
            { "gap_1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "music_volume@settings_start.slider_row": {
                "$option_label": "Music Volume",
                "$slider_binding": "#music_volume"
              }
            },
            { "gap_2": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "sound_volume@settings_start.slider_row": {
                "$option_label": "Sound Effects",
                "$slider_binding": "#sound_volume"
              }
            },
            { "gap_3": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "ambient_volume@settings_start.slider_row": {
                "$option_label": "Ambient Sounds",
                "$slider_binding": "#ambient_volume"
              }
            },
            { "gap_4": { "type": "panel", "size": [ "100%", 10 ] } },
            {
              "audio_feedback@settings_start.toggle_row": {
                "$option_label": "Audio Feedback",
                "$toggle_binding": "#audio_feedback"
              }
            },
            { "gap_5": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "subtitles_toggle@settings_start.toggle_row": {
                "$option_label": "Show Subtitles",
                "$toggle_binding": "#subtitles_enabled"
              }
            }
          ]
        }
      }
    ]
  },

  "performance_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 140px", "100% - 40px" ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [ -10, 0 ],
    "controls": [
      {
        "header_section": {
          "type": "panel",
          "size": [ "100%", 25 ],
          "controls": [
            {
              "header_bg": {
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "alpha": 0.15,
                "layer": 1
              }
            },
            {
              "header_border": {
                "type": "image",
                "texture": "textures/gui/client/btn_border",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "layer": 2
              }
            },
            {
              "header_text": {
                "type": "label",
                "text": "Performance Settings",
                "color": "$color_cyan",
                "offset": [ 10, 0 ],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "layer": 3
              }
            }
          ]
        }
      },
      { "gap_header": { "type": "panel", "size": [ "100%", 6 ] } },
      {
        "performance_section": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "render_distance@settings_start.slider_row": {
                "$option_label": "Render Distance",
                "$slider_binding": "#render_distance"
              }
            },
            { "gap_1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "fov@settings_start.slider_row": {
                "$option_label": "Field of View",
                "$slider_binding": "#fov"
              }
            },
            { "gap_2": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "graphics@settings_start.toggle_row": {
                "$option_label": "Fancy Graphics",
                "$toggle_binding": "#fancy_graphics"
              }
            },
            { "gap_3": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "smooth_lighting@settings_start.toggle_row": {
                "$option_label": "Smooth Lighting",
                "$toggle_binding": "#smooth_lighting"
              }
            },
            { "gap_4": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "particle@settings_start.slider_row": {
                "$option_label": "Particle Density",
                "$slider_binding": "#particle_density"
              }
            },
            { "gap_5": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "vsync@settings_start.toggle_row": {
                "$option_label": "VSync",
                "$toggle_binding": "#vsync_enabled"
              }
            }
          ]
        }
      }
    ]
  },

  "controls_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 140px", "100% - 40px" ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [ -10, 0 ],
    "controls": [
      {
        "header_section": {
          "type": "panel",
          "size": [ "100%", 25 ],
          "controls": [
            {
              "header_bg": {
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "alpha": 0.15,
                "layer": 1
              }
            },
            {
              "header_border": {
                "type": "image",
                "texture": "textures/gui/client/btn_border",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "layer": 2
              }
            },
            {
              "header_text": {
                "type": "label",
                "text": "Control Settings",
                "color": "$color_cyan",
                "offset": [ 10, 0 ],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "layer": 3
              }
            }
          ]
        }
      },
      { "gap_header": { "type": "panel", "size": [ "100%", 6 ] } },
      {
        "controls_section": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "sensitivity@settings_start.slider_row": {
                "$option_label": "Mouse Sensitivity",
                "$slider_binding": "#mouse_sensitivity"
              }
            },
            { "gap_1": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "invert_y@settings_start.toggle_row": {
                "$option_label": "Invert Y-Axis",
                "$toggle_binding": "#invert_y_axis"
              }
            },
            { "gap_2": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "smooth_camera@settings_start.toggle_row": {
                "$option_label": "Smooth Camera",
                "$toggle_binding": "#smooth_camera"
              }
            },
            { "gap_3": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "toggle_crouch@settings_start.toggle_row": {
                "$option_label": "Toggle Crouch",
                "$toggle_binding": "#toggle_crouch"
              }
            },
            { "gap_4": { "type": "panel", "size": [ "100%", 4 ] } },
            {
              "toggle_sprint@settings_start.toggle_row": {
                "$option_label": "Toggle Sprint",
                "$toggle_binding": "#toggle_sprint"
              }
            }
          ]
        }
      }
    ]
  },

  "slider_row": {
    "type": "panel",
    "size": [ "100%", 35 ],
    "controls": [
      {
        "bg@common_buttons.client_button_panel": {
          "alpha": 0.2,
          "layer": 1,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "label": {
          "type": "label",
          "text": "$option_label",
          "offset": [ 10, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "color": [ 1, 1, 1 ],
          "layer": 2
        }
      },
      {
        "slider@common_buttons.premium_slider": {
          "size": [ 120, 16 ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -10, 0 ],
          "layer": 2
        }
      }
    ]
  },

  "toggle_row": {
    "type": "panel",
    "size": [ "100%", 35 ],
    "controls": [
      {
        "bg@common_buttons.client_button_panel": {
          "alpha": 0.2,
          "layer": 1,
          "size": [ "100%", "100%" ]
        }
      },
      {
        "label": {
          "type": "label",
          "text": "$option_label",
          "offset": [ 10, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "color": [ 1, 1, 1 ],
          "layer": 2
        }
      },
      {
        "toggle@common_buttons.premium_toggle": {
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -15, 0 ],
          "layer": 2
        }
      }
    ]
  }
}