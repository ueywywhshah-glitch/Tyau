{
  "namespace": "settings_start",

  "$safezone_width": "90%c",
  "$safezone_height": "90%c",
  "$safezone_offset_x": "5%c",
  "$safezone_offset_y": "5%c",

  "$panel_bg_alpha": 0.15,
  "$header_height": 30,
  "$spacing_gap": 4,
  "$spacing_large_gap": 12,
  "$category_width": 120,
  "$category_offset": 20,

  "$color_cyan": [ 0, 1, 1 ],
  "$color_white": [ 1, 1, 1 ],

  "settings_screen@common.base_screen": {
    "$screen_bg_content": "RPC_BGDATA.UI2",
    "$screen_animations": [
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade"
    ],
    "$screen_content": "settings_start.settings_screen_content"
  },

  "settings_screen_content": {
    "type": "panel",
    "size": [ "$safezone_width", "$safezone_height" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 0, 0 ],
    "controls": [
      { "sidebar@settings_start.category_stack": { "layer": 5 } },
      { "options_view@settings_start.options_panel": { "layer": 6 } }
    ]
  },

  "category_stack": {
    "type": "stack_panel",
    "size": [ "$category_width", "100%" ],
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "offset": [ "$category_offset", 0 ],
    "controls": [
      { "fill": { "type": "panel", "size": [ "100%", "fill" ], "layer": 1 } },
      {
        "video@settings_start.cat_row": {
          "$button_text": "Video",
          "$pressed_button_name": "button.video_tab",
          "$focus_id": "cat_video",
          "$focus_change_down": "cat_audio"
        }
      },
      { "p1": { "type": "panel", "size": [ "100%", 2 ], "layer": 1 } },
      {
        "audio@settings_start.cat_row": {
          "$button_text": "Audio",
          "$pressed_button_name": "button.audio_tab",
          "$focus_id": "cat_audio",
          "$focus_change_up": "cat_video",
          "$focus_change_down": "cat_performance"
        }
      },
      { "p2": { "type": "panel", "size": [ "100%", 2 ], "layer": 1 } },
      {
        "performance@settings_start.cat_row": {
          "$button_text": "Performance",
          "$pressed_button_name": "button.performance_tab",
          "$focus_id": "cat_performance",
          "$focus_change_up": "cat_audio",
          "$focus_change_down": "cat_controls"
        }
      },
      { "p3": { "type": "panel", "size": [ "100%", 2 ], "layer": 1 } },
      {
        "ctrl@settings_start.cat_row": {
          "$button_text": "Controls",
          "$pressed_button_name": "button.controls_tab",
          "$focus_id": "cat_controls",
          "$focus_change_up": "cat_performance"
        }
      },
      { "fill2": { "type": "panel", "size": [ "100%", "fill" ], "layer": 1 } }
    ]
  },

  "cat_row": {
    "type": "panel",
    "size": [ "100%", 30 ],
    "controls": [
      { "b@common_buttons.simple_button": { "size": [ "100%", "100%" ], "layer": 10 } }
    ]
  },

  "options_panel": {
    "type": "panel",
    "size": [ "100% - 140px", "100%" ],
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "offset": [ -10, 0 ],
    "layer": 5,
    "controls": [
      {
        "video_panel@settings_start.video_settings_panel": {
          "bindings": [ { "binding_name": "#video_panel_visible", "binding_name_override": "#visible" } ]
        }
      },
      {
        "audio_panel@settings_start.audio_settings_panel": {
          "bindings": [ { "binding_name": "#audio_panel_visible", "binding_name_override": "#visible" } ]
        }
      },
      {
        "performance_panel@settings_start.performance_settings_panel": {
          "bindings": [ { "binding_name": "#performance_panel_visible", "binding_name_override": "#visible" } ]
        }
      },
      {
        "controls_panel@settings_start.controls_settings_panel": {
          "bindings": [ { "binding_name": "#controls_panel_visible", "binding_name_override": "#visible" } ]
        }
      }
    ]
  },

  "video_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 20px", "100% - 20px" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 0, 0 ],
    "layer": 6,
    "controls": [
      { "fov_slider@settings_start.slider_row": { "$option_label": "options.fov", "$slider_binding": "#fov" } },
      { "gap1": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "render_dist@settings_start.slider_row": { "$option_label": "options.renderdistance", "$slider_binding": "#render_distance" } },
      { "gap2": { "type": "panel", "size": [ "100%", "$spacing_large_gap" ], "layer": 1 } },
      { "fancy_toggle@settings_start.toggle_row": { "$option_label": "options.fancygraphics", "$toggle_binding": "#fancy_graphics" } }
    ]
  },

  "audio_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 20px", "100% - 20px" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 0, 0 ],
    "layer": 6,
    "controls": [
      { "header@settings_start.section_header": { "$section_title": "Audio Settings" } },
      { "gap_header": { "type": "panel", "size": [ "100%", "$spacing_medium" ], "layer": 1 } },
      { "master_volume@settings_start.slider_row": { "$option_label": "Master Volume", "$slider_binding": "#master_volume" } },
      { "gap_1": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "music_volume@settings_start.slider_row": { "$option_label": "Music Volume", "$slider_binding": "#music_volume" } },
      { "gap_2": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "audio_feedback@settings_start.toggle_row": { "$option_label": "Audio Feedback", "$toggle_binding": "#audio_feedback" } }
    ]
  },

  "performance_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 20px", "100% - 20px" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 0, 0 ],
    "layer": 6,
    "controls": [
      { "header@settings_start.section_header": { "$section_title": "Performance Settings" } },
      { "gap_header": { "type": "panel", "size": [ "100%", "$spacing_medium" ], "layer": 1 } },
      { "render_distance@settings_start.slider_row": { "$option_label": "Render Distance", "$slider_binding": "#render_distance" } },
      { "gap_1": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "fov@settings_start.slider_row": { "$option_label": "Field of View", "$slider_binding": "#fov" } },
      { "gap_2": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "graphics@settings_start.toggle_row": { "$option_label": "Fancy Graphics", "$toggle_binding": "#fancy_graphics" } },
      { "gap_3": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "vsync@settings_start.toggle_row": { "$option_label": "VSync", "$toggle_binding": "#vsync_enabled" } }
    ]
  },

  "controls_settings_panel": {
    "type": "stack_panel",
    "size": [ "100% - 20px", "100% - 20px" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "offset": [ 0, 0 ],
    "layer": 6,
    "controls": [
      { "header@settings_start.section_header": { "$section_title": "Control Settings" } },
      { "gap_header": { "type": "panel", "size": [ "100%", "$spacing_medium" ], "layer": 1 } },
      { "sensitivity@settings_start.slider_row": { "$option_label": "Mouse Sensitivity", "$slider_binding": "#mouse_sensitivity" } },
      { "gap_1": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "invert_y@settings_start.toggle_row": { "$option_label": "Invert Y-Axis", "$toggle_binding": "#invert_y_axis" } },
      { "gap_2": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
      { "toggle_crouch@settings_start.toggle_row": { "$option_label": "Toggle Crouch", "$toggle_binding": "#toggle_crouch" } }
    ]
  },

  "section_header": {
    "type": "panel",
    "size": [ "100%", 25 ],
    "layer": 7,
    "controls": [
      {
        "header_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": "$panel_bg_alpha",
          "layer": 40
        }
      },
      {
        "header_border": {
          "type": "image",
          "texture": "textures/gui/client/btn_border",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "layer": 41
        }
      },
      {
        "header_text": {
          "type": "label",
          "text": "$section_title",
          "color": "$color_cyan",
          "offset": [ 10, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 42
        }
      }
    ]
  },

  "slider_row": {
    "type": "panel",
    "size": [ "100%", 38 ],
    "layer": 6,
    "controls": [
      {
        "row_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": 0.2,
          "layer": 50
        }
      },
      {
        "label": {
          "type": "label",
          "text": "$option_label",
          "color": "$color_white",
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 51
        }
      },
      {
        "slider@common_buttons.premium_slider": {
          "size": [ "140", 14 ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -12, 0 ],
          "layer": 52
        }
      }
    ]
  },

  "toggle_row": {
    "type": "panel",
    "size": [ "100%", 38 ],
    "layer": 6,
    "controls": [
      {
        "row_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": 0.2,
          "layer": 50
        }
      },
      {
        "label": {
          "type": "label",
          "text": "$option_label",
          "color": "$color_white",
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 51
        }
      },
      {
        "toggle@common_buttons.premium_toggle": {
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -12, 0 ],
          "layer": 52
        }
      }
    ]
  }
}
