{
  "namespace": "audio_settings",

  "$safezone_width": "90%c",
  "$safezone_height": "90%c",

  "$panel_bg_alpha": 0.15,
  "$header_height": 30,
  "$spacing_gap": 4,
  "$spacing_medium": 8,
  "$spacing_large": 12,
  "$back_button_width": 100,
  "$back_button_height": 30,

  "$color_cyan": [ 0, 1, 1 ],
  "$color_white": [ 1, 1, 1 ],
  "$color_white_dim": [ 0.8, 0.8, 0.8 ],
  "$color_accent_cyan": [ 0.7, 1, 1 ],

  "audio_settings_screen@common.base_screen": {
    "$screen_bg_content": "RPC_BGDATA.UI2",
    "$screen_animations": [
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade"
    ],
    "$screen_content": "audio_settings.audio_screen_content"
  },

  "audio_screen_content": {
    "type": "panel",
    "size": [ "$safezone_width", "$safezone_height" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      { "back_button_panel@audio_settings.back_button_section": { "layer": 5 } },
      { "main_content@audio_settings.main_audio_panel": { "layer": 6 } }
    ]
  },

  "back_button_section": {
    "type": "panel",
    "size": [ "100%", 35 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 10 ],
    "layer": 5,
    "controls": [
      {
        "back_btn@common_buttons.simple_button": {
          "size": [ "$back_button_width", "$back_button_height" ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 10, 0 ],
          "$button_text": "Back",
          "$button_size": [ "$back_button_width", "$back_button_height" ],
          "$pressed_button_name": "button.audio_back",
          "$focus_id": "audio_back_button",
          "$focus_change_down": "audio_master_volume"
        }
      }
    ]
  },

  "main_audio_panel": {
    "type": "panel",
    "size": [ "100%", "100% - 50px" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 45 ],
    "layer": 6,
    "controls": [
      {
        "title_panel": {
          "type": "panel",
          "size": [ "100%", "$header_height" ],
          "layer": 7,
          "controls": [
            {
              "title_bg": {
                "type": "image",
                "texture": "textures/gui/client/btn_default",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "alpha": "$panel_bg_alpha",
                "layer": 40
              }
            },
            {
              "title_border": {
                "type": "image",
                "texture": "textures/gui/client/btn_border",
                "nineslice_size": 4.0,
                "size": [ "100%", "100%" ],
                "layer": 41
              }
            },
            {
              "title_text": {
                "type": "label",
                "text": "WOLF CLIENT | AUDIO SETTINGS",
                "color": "$color_cyan",
                "offset": [ 15, 0 ],
                "anchor_from": "left_middle",
                "anchor_to": "left_middle",
                "layer": 42
              }
            }
          ]
        }
      },
      { "title_gap": { "type": "panel", "size": [ "100%", "$spacing_medium" ], "layer": 1 } },
      {
        "content_container": {
          "type": "stack_panel",
          "size": [ "95%c", "100%c" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [ 0, 0 ],
          "layer": 8,
          "controls": [
            { "volume_header@audio_settings.section_header": { "$section_title": "VOLUME CONTROLS" } },
            { "vol_gap1": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "master_vol@audio_settings.slider_item": { "$item_label": "Master Volume", "$slider_binding": "#master_volume", "$focus_id": "audio_master_volume" } },
            { "vol_gap2": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "music_vol@audio_settings.slider_item": { "$item_label": "Music", "$slider_binding": "#music_volume" } },
            { "vol_gap3": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "effects_vol@audio_settings.slider_item": { "$item_label": "Sound Effects", "$slider_binding": "#sound_volume" } },
            { "vol_gap4": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "ambient_vol@audio_settings.slider_item": { "$item_label": "Ambient Sounds", "$slider_binding": "#ambient_volume" } },
            { "vol_gap5": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "ui_vol@audio_settings.slider_item": { "$item_label": "UI Sounds", "$slider_binding": "#ui_volume" } },
            { "vol_spacer": { "type": "panel", "size": [ "100%", "$spacing_large" ], "layer": 1 } },
            { "options_header@audio_settings.section_header": { "$section_title": "AUDIO OPTIONS" } },
            { "opt_gap1": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "audio_feedback@audio_settings.toggle_item": { "$item_label": "Audio Feedback", "$toggle_binding": "#audio_feedback" } },
            { "opt_gap2": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "subtitles@audio_settings.toggle_item": { "$item_label": "Show Subtitles", "$toggle_binding": "#subtitles_enabled" } },
            { "opt_gap3": { "type": "panel", "size": [ "100%", "$spacing_gap" ], "layer": 1 } },
            { "mono_audio@audio_settings.toggle_item": { "$item_label": "Mono Audio", "$toggle_binding": "#mono_audio" } }
          ]
        }
      }
    ]
  },

  "section_header": {
    "type": "panel",
    "size": [ "100%", 22 ],
    "layer": 9,
    "controls": [
      {
        "header_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": 0.25,
          "layer": 50
        }
      },
      {
        "header_accent": {
          "type": "image",
          "texture": "textures/gui/client/btn_pressed",
          "nineslice_size": 4.0,
          "size": [ 4, "100%" ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 51
        }
      },
      {
        "header_text": {
          "type": "label",
          "text": "$section_title",
          "color": "$color_accent_cyan",
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 52
        }
      }
    ]
  },

  "slider_item": {
    "type": "panel",
    "size": [ "100%", 32 ],
    "layer": 8,
    "controls": [
      {
        "item_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": 0.2,
          "layer": 50
        }
      },
      {
        "item_label": {
          "type": "label",
          "text": "$item_label",
          "color": "$color_white",
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 51
        }
      },
      {
        "slider@common_buttons.premium_slider": {
          "size": [ 140, 14 ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -12, 0 ],
          "layer": 52
        }
      }
    ]
  },

  "toggle_item": {
    "type": "panel",
    "size": [ "100%", 32 ],
    "layer": 8,
    "controls": [
      {
        "item_bg": {
          "type": "image",
          "texture": "textures/gui/client/btn_default",
          "nineslice_size": 4.0,
          "size": [ "100%", "100%" ],
          "alpha": 0.2,
          "layer": 50
        }
      },
      {
        "item_label": {
          "type": "label",
          "text": "$item_label",
          "color": "$color_white",
          "offset": [ 12, 0 ],
          "anchor_from": "left_middle",
          "anchor_to": "left_middle",
          "layer": 51
        }
      },
      {
        "toggle@common_buttons.premium_toggle": {
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "offset": [ -12, 0 ],
          "layer": 52
        }
      }
    ]
  }
}
